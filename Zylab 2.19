num_servings_required = float(input('\nHow many servings would you like to make?\n'))

print('\nLemonade ingredients - yields {:.2f} servings'.format(num_servings_required))
print('{:.2f} cup(s) lemon juice'.format(lemon * num_servings_required / servings))
print('{:.2f} cup(s) water'.format(water * num_servings_required / servings))
print('{:.2f} cup(s) agave nectar'.format(nectar * num_servings_required / servings))

